---
export interface Props {
	title?: string
  noRobots?: boolean
  className?: string
}

const { title, noRobots, className } = Astro.props 
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="theme-color" content="#F8B133">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
		<link rel="icon" type="image/svg+xml" href="/graphs/logo-alexis-klisch.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{"Alexis Klisch • " + title || "Developer"}</title>
    <meta name="description" content="Aumentá tus ventas 📈 con las mejores soluciones en Tecnología para el 🏡 Real Estate.">
    <meta property="og:title" content="Soluciones para el Real Estate"/>
    <meta property="og:url" content="https://www.alexisklisch.com" />
    <meta property="og:description" content="Aumentá tus ventas 📈 con las mejores soluciones en Tecnología para el 🏡 Real Estate.">
    <meta property="og:image" content="https://www.alexisklisch.com/media/graphs/miniatura.png">
    <link rel="canonical" href="https://alexisklisch.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;400;700&display=swap" rel="stylesheet">
    {noRobots && <meta name="robots"  content="noindex,follow" />}

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-7PH8KVBP36"></script>
    <script is:raw>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-7PH8KVBP36');
    </script>

	</head>
	<body class={`realtive bg-brand-light min-h-screen text-brand-dark ${className && className}`}>
		<slot />
	</body>
</html>
---
import { Icon } from "astro-icon";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
import Button from "../components/smalls/Button.astro";
import Experience from "../components/knowledge/Experience.astro";
import Projects from "../components/knowledge/Projects.astro";
---s

<Layout title="Full Stack Developer">
  <Header />
  <section class="mx-auto px-7 flex flex-col items-center sm:flex-row sm: sm:gap-10 justify-center md:min-h-[60vh]">
    <img
      class="sm:max-w-sm"
      src="/imgs/hero.png"
      alt="Alexis, desarrollador Frontend y Backend saliendo de un círculo amarillo."
    />
    <ul class="text-center text-2xl mt-8 w-full sm:text-3xl sm:w-fit">
      <li>
        <h3 class="leading-10">Full Stack <strong class="text-sixYellow">Developer</strong></h3>
      </li>
      <li>
        <h3>Diseñador <strong class="text-sixYellow">Gráfico</strong></h3>
      </li>
    </ul>
    <Icon
      class="w-12 animate-bounce mt-9 text-sixYellow-400 sm:hidden"
      name="ic:round-keyboard-arrow-down"
    />
  </section>
  <main>
    <!-- About Me -->
    <section class="mx-auto px-7 py-10 grid items-center md:grid-cols-2 md:max-w-3xl md:py-24">
      <div class="grid grid-cols-[60%_40%] place-items-center md:grid-cols-1 md:gap-y-6 md:justify-self-start">
        <video
          class="[mask:url('/graphs/k-logo.svg')] [mask-repeat:no-repeat] [mask-size:contain]"
          autoplay
          muted
          loop
          poster="/graphs/k-logo.svg"
          src="/vid/video.webm"
        >
        </video>
        <h4 class="text-4xl font-bold text-sixGreen text-center leading-5">
          ¡Hola!<br/>
          <span class="text-sm text-sixDark-300 font-normal">Soy Alexis</span>
        </h4>
      </div>
      <div class="text-sm text-center mt-12 grid gap-3 md:mt-0">
        <p>
          <strong>Full Stack Developer</strong> con experiencia en React, Node, Express
          y Postgres. También habilidades en HTML, CSS, Sass, Javascript, MySQL,
          GIT y Github.
        </p>
        <p>
          Mi objetivo es crear productos con tecnología moderna que ayuden a <strong
            >ahorrar tiempo</strong
          > y mejorar la <strong>eficiencia</strong> de las empresas.
        </p>
        <p>A continuación verás algo de mi experiencia.</p>
      </div>
      <Button className="mt-6 mx-auto md:[grid-column:1/3]" as="a" href="/assets/CV.pdf">
        <strong>Descarga</strong> mi CV
      </Button>
    </section>

    <!-- Conocimientos adquiridos -->
    <section class="min-h-screen bg-sixDark text-sixLight relative -z-50">
      <canvas class="absolute shadow-md shadow-sixDark-200 -z-10" id="knowledge"/>
      <Experience/>
      <!-- <Projects/> -->
    </section>
  </main>
  <Footer/>
</Layout>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.3/particles.min.js"></script>
<script is:inline>
  window.onload = () => {
    Particles.init({
        selector: '#knowledge',
        color: ['#898992', '#F8B133'],
        maxParticles: 400,
        speed: 0.15,
    })
  }
</script>
